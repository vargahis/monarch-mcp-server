{
  "manifest_version": "0.4",
  "name": "monarch-money-mcp",
  "display_name": "Monarch Money MCP Server",
  "version": "0.1.0",
  "description": "MCP server for Monarch Money personal finance â€” accounts, transactions, budgets, cashflow, investments, and more.",
  "author": {
    "name": "vargahis",
    "url": "https://github.com/vargahis/monarch-mcp-server"
  },
  "server": {
    "type": "uv",
    "entry_point": "src/monarch_mcp_server/server.py",
    "mcp_config": {
      "command": "uv",
      "args": [
        "run",
        "--directory",
        "${__dirname}",
        "mcp",
        "run",
        "${__dirname}/src/monarch_mcp_server/server.py"
      ]
    }
  },
  "tools": [
    { "name": "get_accounts", "description": "Get all financial accounts" },
    { "name": "get_transactions", "description": "Get transactions with filters" },
    { "name": "get_budgets", "description": "Get budget information" },
    { "name": "get_cashflow", "description": "Get cashflow analysis" }
  ],
  "keywords": ["finance", "monarch-money", "budgets", "transactions", "accounts"],
  "license": "MIT",
  "compatibility": {
    "platforms": ["darwin", "win32", "linux"],
    "runtimes": {
      "python": ">=3.12"
    }
  }
}
